<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="#FFFFFF">

        <!-- Step 1 - Completed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="@color/apple_success" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_station"
                android:textColor="@color/apple_success"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/apple_success" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="@color/apple_success" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_date_time"
                android:textColor="@color/apple_success"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/apple_secondary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="@color/apple_secondary" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_summary"
                android:textStyle="bold"
                android:textColor="@color/apple_secondary"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reservation_summary"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/apple_gray_dark"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/review_details"
                    android:textSize="16sp"
                    android:textColor="@color/apple_gray_medium"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Reservation Details Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Station Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#007AFF"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Charging Station"
                                android:textSize="14sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/summaryStationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downtown Charging Station"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:tint="#007AFF"
                            android:contentDescription="Location" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Date Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#007AFF"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textSize="14sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/summaryDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="December 15, 2024"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar_small"
                            android:tint="#007AFF"
                            android:contentDescription="Calendar" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#007AFF"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textSize="14sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/summaryTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2:00 PM - 4:00 PM"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            android:tint="#007AFF"
                            android:contentDescription="Time" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Estimated Cost Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#007AFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#FFFFFF"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Cost"
                                android:textSize="14sp"
                                android:textColor="#B3D9FF"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/estimatedCostText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$15.50"
                                android:textSize="24sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="$"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:background="#FFFFFF"
                            android:backgroundTint="#33FFFFFF" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Terms and Conditions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/apple_primary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions_note"
            android:textSize="14sp"
            android:textColor="@color/apple_gray_medium"
            android:padding="16dp"
            android:lineSpacingExtra="2dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:padding="24dp"
        android:paddingTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="12dp"
            android:textColor="#007AFF"
            android:backgroundTint="#F2F2F7"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="#33007AFF"
            style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Confirm Reservation"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#007AFF"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="#33FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>
</LinearLayout>