<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:background="@color/apple_gray_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/apple_primary"
        android:elevation="2dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp">

        <!-- Step 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="@color/apple_success" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_station"
                android:textColor="@color/apple_success"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/apple_secondary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="@color/apple_secondary" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_date_time"
                android:textStyle="bold"
                android:textColor="@color/apple_secondary"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/apple_gray_medium" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="@color/apple_gray_medium" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_summary"
                android:textColor="@color/apple_gray_medium"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_date_time"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/apple_gray_dark"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_date_time"
                android:textSize="16sp"
                android:textColor="@color/apple_gray_medium"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Selected Station Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/apple_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lightning"
                    android:background="@drawable/bg_status_dot"
                    android:backgroundTint="@color/apple_secondary"
                    android:padding="8dp"
                    app:tint="@color/apple_primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_station"
                        android:textSize="12sp"
                        android:textColor="@color/apple_gray_medium"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/selectedStationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/apple_gray_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Date and Time Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/apple_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_date"
                        android:textSize="16sp"
                        android:textColor="@color/apple_gray_dark"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/selectDateBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_selector_card"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar_small"
                            app:tint="@color/apple_secondary" />

                        <TextView
                            android:id="@+id/dateDisplayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/choose_date"
                            android:textSize="16sp"
                            android:textColor="@color/apple_gray_medium"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/rounded_arrow_back_ios_24"
                            android:rotation="180"
                            app:tint="@color/apple_gray_medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selectedDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/apple_secondary"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/apple_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_time"
                        android:textSize="16sp"
                        android:textColor="@color/apple_gray_dark"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/selectTimeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_selector_card"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/apple_secondary" />

                        <TextView
                            android:id="@+id/timeDisplayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/choose_time"
                            android:textSize="16sp"
                            android:textColor="@color/apple_gray_medium"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/rounded_arrow_back_ios_24"
                            android:rotation="180"
                            app:tint="@color/apple_gray_medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selectedTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/apple_secondary"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/apple_primary"
        android:elevation="8dp"
        android:padding="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/btn_back"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/apple_secondary"
            android:backgroundTint="@color/apple_gray_light"
            app:cornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/apple_secondary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/btn_next"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:enabled="false"
            android:layout_marginStart="8dp"
            android:textColor="@color/apple_primary"
            android:backgroundTint="@color/apple_secondary"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>