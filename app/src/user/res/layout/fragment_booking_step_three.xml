<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/apple_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Step 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_station"
            android:textColor="@color/apple_gray_medium"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_date_time"
            android:textColor="@color/apple_gray_medium"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_summary"
            android:textStyle="bold"
            android:textColor="@color/apple_secondary"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Summary Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reservation_summary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/apple_gray_dark"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_details"
        android:textSize="14sp"
        android:textColor="@color/apple_gray_medium"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"/>

    <!-- Summary Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:layout_margin="16dp"
        android:padding="20dp">

        <!-- Station Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                app:tint="@color/apple_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/charging_station"
                    android:textSize="12sp"
                    android:textColor="@color/apple_gray_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/summaryStationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/apple_gray_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Date Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                app:tint="@color/apple_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="12sp"
                    android:textColor="@color/apple_gray_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/summaryDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/apple_gray_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Time Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                app:tint="@color/apple_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="12sp"
                    android:textColor="@color/apple_gray_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/summaryTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/apple_gray_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/apple_gray_light"
            android:layout_marginVertical="16dp"/>

        <!-- Estimated Cost -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_money"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                app:tint="@color/apple_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimated_cost"
                    android:textSize="12sp"
                    android:textColor="@color/apple_gray_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/estimatedCostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/apple_secondary"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Terms and Conditions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_conditions_note"
        android:textSize="12sp"
        android:textColor="@color/apple_gray_medium"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_back"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:textColor="@color/apple_secondary"
            android:backgroundTint="@color/apple_gray_light"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/bg_button_outlined"/>

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_confirm_reservation"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@color/apple_primary"
            android:backgroundTint="@color/apple_secondary"/>
    </LinearLayout>
</LinearLayout>
