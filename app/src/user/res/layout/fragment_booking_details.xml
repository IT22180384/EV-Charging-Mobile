<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/apple_bg_secondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="96dp">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/apple_card_bg"
                app:strokeColor="@color/apple_card_border"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Status and Booking ID Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/container_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_booking_status_approved"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:gravity="center_vertical"
                            android:minHeight="24dp">

                            <View
                                android:id="@+id/view_status_dot"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_status_dot" />

                            <TextView
                                android:id="@+id/booking_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirmed"
                                android:textAllCaps="false"
                                android:textColor="@color/apple_success"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/booking_id_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#BK12345"
                            android:textColor="@color/apple_text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Station Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/apple_card_bg"
                app:strokeColor="@color/apple_card_border"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/station_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Downtown Charging Station"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/apple_text_primary"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/station_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123 Market St, City Center"
                        android:textSize="14sp"
                        android:textColor="@color/apple_text_secondary"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/get_directions_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Get Directions"
                        android:textAllCaps="false"
                        android:textColor="@color/apple_secondary"
                        android:textSize="12sp"
                        app:strokeColor="@color/apple_secondary"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/ic_directions"
                        app:iconTint="@color/apple_secondary"
                        app:iconSize="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Booking Time Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/apple_card_bg"
                app:strokeColor="@color/apple_card_border"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Date and Time Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/booking_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Dec 15, 2024"
                                android:textColor="@color/apple_text_secondary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_clock"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/time_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="2:00 PM - 4:00 PM"
                                android:textColor="@color/apple_text_secondary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Duration Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Duration: "
                            android:textColor="@color/apple_text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/booking_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 hours"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/apple_text_primary"/>

                    </LinearLayout>

                    <!-- Hidden individual time fields for backward compatibility -->
                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        android:text="2:00 PM" />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        android:text="4:00 PM" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Vehicle & Slot Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/apple_card_bg"
                app:strokeColor="@color/apple_card_border"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Vehicle Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_directions"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/vehicle_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Tesla Model 3 - ABC123"
                            android:textSize="14sp"
                            android:textColor="@color/apple_text_primary"/>

                    </LinearLayout>

                    <!-- Charging Slot Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_lightning"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/text_slot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Slot A2"
                            android:textColor="@color/apple_secondary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modify_booking_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Modify Booking"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/apple_secondary"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_booking_btn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cancel Booking"
                    android:textAllCaps="false"
                    android:textColor="@color/apple_error"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:strokeColor="@color/apple_error"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_cancel"
                    app:iconTint="@color/apple_error"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contact_support_btn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Contact Support"
                    android:textAllCaps="false"
                    android:textColor="@color/apple_text_secondary"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_support"
                    app:iconTint="@color/apple_text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
