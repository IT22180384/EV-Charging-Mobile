<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Modern Material Card Styles -->
    <style name="AppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="AppCard.Flat" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/apple_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/apple_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/apple_text_primary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/apple_text_secondary</item>
    </style>

    <style name="TextAppearance.App.SecondaryText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/apple_text_secondary</item>
    </style>

    <!-- Modern Button Styles -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">54dp</item>
        <item name="backgroundTint">#007AFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:textColor">#007AFF</item>
        <item name="strokeColor">#007AFF</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Settings Item Style -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_xl</item>
        <item name="android:paddingEnd">@dimen/spacing_xl</item>
        <item name="android:paddingTop">@dimen/spacing_lg</item>
        <item name="android:paddingBottom">@dimen/spacing_lg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Profile Item Style -->
    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_xl</item>
        <item name="android:paddingEnd">@dimen/spacing_xl</item>
        <item name="android:paddingTop">@dimen/spacing_md</item>
        <item name="android:paddingBottom">@dimen/spacing_md</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/apple_ash_light</item>
    </style>

    <!-- Modern Switch Style -->
    <style name="AppSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchTheme</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorPrimary">#007AFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOutline">#8E8E93</item>
    </style>

    <!-- Modern DatePicker Theme -->
    <style name="AppleDatePickerTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorPrimary">#007AFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1D1D1F</item>
        <item name="colorOutline">#8E8E93</item>
        <item name="android:buttonBarStyle">@style/AppleDialogButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/AppleDialogButton</item>
    </style>

    <!-- Modern TimePicker Theme -->
    <style name="AppleTimePickerTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorPrimary">#007AFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1D1D1F</item>
        <item name="colorOutline">#8E8E93</item>
        <item name="android:buttonBarStyle">@style/AppleDialogButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/AppleDialogButton</item>
    </style>

    <!-- Apple Dialog Button Bar -->
    <style name="AppleDialogButtonBar" parent="Widget.Material3.Button">
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Apple Dialog Button -->
    <style name="AppleDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#007AFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Modern Apple DatePicker Theme -->
    <style name="ModernAppleDatePickerTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@drawable/picker_bg_rounded</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">#007AFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1D1D1F</item>
        <item name="colorOutline">#8E8E93</item>
        <item name="android:datePickerStyle">@style/ModernAppleDatePickerStyle</item>
        <item name="android:buttonBarStyle">@style/ModernAppleDialogButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/ModernAppleDialogButton</item>
    </style>

    <!-- Modern Apple TimePicker Theme -->
    <style name="ModernAppleTimePickerTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@drawable/picker_bg_rounded</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">#007AFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1D1D1F</item>
        <item name="colorOutline">#8E8E93</item>
        <item name="android:timePickerStyle">@style/ModernAppleTimePickerStyle</item>
        <item name="android:buttonBarStyle">@style/ModernAppleDialogButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/ModernAppleDialogButton</item>
    </style>

    <!-- Simplified DatePicker Style -->
    <style name="ModernAppleDatePickerStyle">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Simplified TimePicker Style -->
    <style name="ModernAppleTimePickerStyle">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Modern Apple Dialog Button Bar -->
    <style name="ModernAppleDialogButtonBar" parent="Widget.Material3.Button">
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Modern Apple Dialog Button -->
    <style name="ModernAppleDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#007AFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:minWidth">80dp</item>
    </style>

</resources>