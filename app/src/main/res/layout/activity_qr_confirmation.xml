<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apple_ash_extra_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:paddingBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_qr_success"
                android:background="@drawable/circle_background_success"
                android:padding="20dp"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Verified"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/tvVerificationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Code successfully scanned and verified"
                android:textColor="@color/apple_success"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking details confirmed and ready for charging"
                android:textColor="@color/apple_gray_medium"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Booking Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="center"
            android:padding="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/apple_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/container_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_booking_status_confirmed"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical"
                        android:minHeight="28dp"
                        android:minWidth="0dp">

                        <View
                            android:id="@+id/view_status_dot"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_status_dot_confirmed" />

                        <TextView
                            android:id="@+id/text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmed"
                            android:textAllCaps="false"
                            android:textColor="@color/apple_success"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/text_booking_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#BK001234"
                        android:textColor="@color/apple_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Downtown Charging Station"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_location"
                    android:text="123 Market St, City Center"
                    android:textColor="@color/apple_gray_medium"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="@color/apple_secondary"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/text_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Dec 15, 2024"
                            android:textColor="@color/apple_gray_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/apple_secondary"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="2:00 PM - 4:00 PM"
                            android:textColor="@color/apple_gray_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_ev_plug"
                        android:tint="@color/apple_secondary"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/text_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Slot A2 - DC Fast Charger"
                        android:textColor="@color/apple_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Customer Information -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/apple_divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Customer Information"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Customer Name:"
                        android:textColor="@color/apple_gray_medium"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle:"
                        android:textColor="@color/apple_gray_medium"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tesla Model 3"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NIC:"
                        android:textColor="@color/apple_gray_medium"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_nic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="951234567V"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Start Charging Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartCharging"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Start Charging Session"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/apple_success"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_play_arrow"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                style="@style/AppButton" />

            <!-- Cancel Booking Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:text="Cancel Booking"
                android:textColor="@color/apple_error"
                android:textSize="16sp"
                app:backgroundTint="@color/semantic_error_light"
                app:cornerRadius="16dp"
                app:strokeColor="@color/apple_error"
                app:strokeWidth="1dp"
                style="@style/AppButton.Outlined" />

            <!-- Back to Scanner Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToScanner"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                android:text="Scan Another QR Code"
                android:textColor="@color/apple_secondary"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_qr_code"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/apple_secondary"
                app:strokeColor="@color/apple_secondary"
                app:strokeWidth="1dp"
                style="@style/AppButton.Outlined" />

        </LinearLayout>

        <!-- Charging Session Progress (Initially Hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardChargingProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charging in Progress"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ProgressBar
                    android:id="@+id/progressCharging"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/apple_success" />

                <TextView
                    android:id="@+id/tvChargingProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/apple_success"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tvTimeRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated time remaining: 45 minutes"
                    android:textColor="@color/apple_gray_medium"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopCharging"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="16dp"
                    android:text="Stop Charging"
                    android:textColor="@color/apple_error"
                    android:textSize="16sp"
                    app:backgroundTint="@color/semantic_error_light"
                    app:cornerRadius="16dp"
                    app:strokeColor="@color/apple_error"
                    app:strokeWidth="1dp"
                    style="@style/AppButton.Outlined" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>