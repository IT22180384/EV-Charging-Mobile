<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_profile"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/apple_text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/btn_close_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/circle_button_background"
                android:contentDescription="@string/btn_cancel"
                android:padding="6dp"
                android:tint="@color/apple_text_secondary" />

        </LinearLayout>

        <!-- Full Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textSize="15sp"
                android:textColor="@color/apple_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_bg_secondary"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/apple_blue"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your full name"
                    android:textSize="17sp"
                    android:textColor="@color/apple_text_primary"
                    android:textColorHint="@color/apple_text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Email (Read-only) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textSize="15sp"
                android:textColor="@color/apple_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_disabled_bg"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email cannot be changed"
                    android:textSize="17sp"
                    android:textColor="@color/apple_text_secondary"
                    android:textColorHint="@color/apple_text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="15sp"
                android:textColor="@color/apple_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_bg_secondary"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/apple_blue"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your phone number"
                    android:textSize="17sp"
                    android:textColor="@color/apple_text_primary"
                    android:textColorHint="@color/apple_text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent"
                    android:inputType="phone"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- NIC (Read-only) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nic_number"
                android:textSize="15sp"
                android:textColor="@color/apple_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_disabled_bg"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_nic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="NIC cannot be changed"
                    android:textSize="17sp"
                    android:textColor="@color/apple_text_secondary"
                    android:textColorHint="@color/apple_text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Vehicle Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_type"
                android:textSize="15sp"
                android:textColor="@color/apple_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_bg_secondary"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/apple_blue"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your vehicle type"
                    android:textSize="17sp"
                    android:textColor="@color/apple_text_primary"
                    android:textColorHint="@color/apple_text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_edit"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/btn_cancel"
                android:textColor="@color/apple_blue"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="16dp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/button_secondary_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_profile"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/btn_save"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:backgroundTint="@color/apple_blue"
                app:cornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>