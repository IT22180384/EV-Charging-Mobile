<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Warning Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_warning"
            android:tint="@color/apple_error"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/deactivate_account" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deactivate_account_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/apple_text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deactivate_account_message"
            android:textSize="16sp"
            android:textColor="@color/apple_text_secondary"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <!-- Loading Indicator (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/loading_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_deactivating"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:indeterminateTint="@color/apple_blue" />

            <TextView
                android:id="@+id/text_deactivating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deactivating account..."
                android:textSize="16sp"
                android:textColor="@color/apple_blue"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_deactivate"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/btn_cancel"
                android:textColor="@color/apple_blue"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="16dp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/button_secondary_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm_deactivate"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/btn_deactivate"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:backgroundTint="@color/apple_error"
                app:cornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>