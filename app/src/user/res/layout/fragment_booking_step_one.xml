<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/apple_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Step 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_station"
            android:textStyle="bold"
            android:textColor="@color/apple_secondary"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_date_time"
            android:textColor="@color/apple_gray_medium"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_summary"
            android:textColor="@color/apple_gray_medium"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Select Station Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_station"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/apple_gray_dark"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_station"
        android:textSize="14sp"
        android:textColor="@color/apple_gray_medium"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"/>

    <!-- Toggle List/Map -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/listViewBtn"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/list_view"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/apple_secondary"
            android:layout_marginEnd="8dp"/>

        <Button

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/mapViewBtn"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/map_view"
            android:textAllCaps="false"
            android:textColor="@color/apple_gray_dark"/>
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchStations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:padding="12dp"
        android:background="@drawable/bg_search"
        android:layout_margin="16dp"/>

    <!-- RecyclerView for Stations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stationRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_next"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:enabled="false"
        android:layout_margin="16dp"
        android:textColor="@color/apple_primary"
        android:backgroundTint="@color/apple_secondary" />
</LinearLayout>
