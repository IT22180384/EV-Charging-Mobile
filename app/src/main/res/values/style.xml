<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.EVChargingApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/apple_secondary</item>
        <item name="colorPrimaryVariant">@color/gradient_primary_end</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/apple_success</item>
        <item name="colorSecondaryVariant">@color/gradient_success_end</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/apple_text_primary</item>
         <item name="colorError">@color/apple_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.App.Headline</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.App.Title</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.Body</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.Body</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.App.SecondaryText</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.App.Button</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="materialButtonOutlinedStyle">@style/AppButton.Outlined</item>

        <!-- Card Styles -->
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="Theme.EVChargingApp" parent="Base.Theme.EVChargingApp" />

    <!-- Modern Material Card Styles -->
    <style name="AppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/apple_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="AppCard.Flat" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="AppCard.Small" parent="AppCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/apple_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/apple_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/apple_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.SecondaryText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/apple_gray_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.App.Success" parent="TextAppearance.App.Body">
        <item name="android:textColor">@color/apple_success</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Warning" parent="TextAppearance.App.Body">
        <item name="android:textColor">@color/apple_warning</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Error" parent="TextAppearance.App.Body">
        <item name="android:textColor">@color/apple_error</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Modern Button Styles -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:backgroundTint">@color/apple_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:elevation">2dp</item>
     </style>

    <style name="AppButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/apple_secondary</item>
        <item name="strokeColor">@color/apple_secondary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
     </style>

    <style name="AppButton.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/apple_secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Button Variants -->
    <style name="AppButton.Success" parent="AppButton">
        <item name="android:backgroundTint">@color/apple_success</item>
    </style>

    <style name="AppButton.Warning" parent="AppButton">
        <item name="android:backgroundTint">@color/apple_warning</item>
    </style>

    <style name="AppButton.Error" parent="AppButton">
        <item name="android:backgroundTint">@color/apple_error</item>
    </style>

    <style name="AppButton.Outlined.Error" parent="AppButton.Outlined">
        <item name="android:textColor">@color/apple_error</item>
        <item name="strokeColor">@color/apple_error</item>
    </style>

    <!-- Settings Item Style -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Profile Item Style -->
    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/apple_divider</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Modern Switch Style -->
    <style name="AppSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchTheme</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorPrimary">@color/apple_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/apple_text_primary</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="AppProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/progress_background</item>
        <item name="indicatorColor">@color/progress_primary</item>
        <item name="trackThickness">8dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="AppProgressBar.Success" parent="AppProgressBar">
        <item name="indicatorColor">@color/progress_success</item>
    </style>

    <!-- Status Badge Styles -->
    <style name="StatusBadge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="StatusBadge.Confirmed">
        <item name="android:background">@drawable/bg_booking_status_confirmed</item>
    </style>

    <style name="StatusBadge.Pending">
     </style>

    <!-- QR Confirmation Specific Styles -->
    <style name="QRConfirmationHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
         <item name="android:paddingBottom">32dp</item>
    </style>

    <style name="BookingDetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Action Button Container -->
    <style name="ActionButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>