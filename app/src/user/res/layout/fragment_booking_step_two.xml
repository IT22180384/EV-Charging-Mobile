<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="#FFFFFF">

        <!-- Step 1 - Completed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="#34C759" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station"
                android:textColor="#34C759"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="#007AFF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="#007AFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                android:textStyle="bold"
                android:textColor="#007AFF"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="#8E8E93" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_status_dot"
                android:backgroundTint="#8E8E93" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textColor="#8E8E93"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Date &amp; Time"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="#1D1D1F"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose your preferred date and time for charging"
                    android:textSize="16sp"
                    android:textColor="#8E8E93"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Content Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Selected Station Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#34C759"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selected Station"
                                android:textSize="14sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/selectedStationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downtown Charging Station"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lightning"
                            android:tint="#007AFF"
                            android:contentDescription="Station" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Date Selection Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Select Date"
                                    android:textSize="14sp"
                                    android:textColor="#8E8E93"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:id="@+id/selectedDateText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Choose date"
                                    android:textSize="18sp"
                                    android:textColor="#1D1D1F"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendar_small"
                                android:tint="#007AFF"
                                android:contentDescription="Calendar" />
                        </LinearLayout>

                        <!-- Selection Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:background="#F8F9FA"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to select date"
                                android:textSize="16sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Time Selection Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/timeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Select Time"
                                    android:textSize="14sp"
                                    android:textColor="#8E8E93"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:id="@+id/selectedTimeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Choose time"
                                    android:textSize="18sp"
                                    android:textColor="#1D1D1F"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_clock"
                                android:tint="#007AFF"
                                android:contentDescription="Time" />
                        </LinearLayout>

                        <!-- Time Slot Chips -->
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupTimeSlots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            app:singleLine="false">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_9_10"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="9 - 10" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_10_11"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="10 - 11" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_11_12"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="11 - 12" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_1_2"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="1 - 2" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_2_3"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="2 - 3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_3_4"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="3 - 4" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_4_5"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="4 - 5" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_time_5_6"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:text="5 - 6" />

                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:paddingTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="12dp"
            android:textColor="#007AFF"
            android:backgroundTint="#F2F2F7"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="#33007AFF"
            style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#007AFF"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="#33FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>

</LinearLayout>
