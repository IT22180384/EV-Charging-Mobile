<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/nav_background"
    android:elevation="@dimen/nav_elevation"
    app:menu="@menu/bottom_navigation_menu"
    app:itemIconTint="@color/nav_item_selector"
    app:itemTextColor="@color/nav_item_selector"
    app:itemIconSize="@dimen/nav_icon_size"
    app:labelVisibilityMode="labeled"
    app:itemActiveIndicatorStyle="@style/AppleNavItemIndicator"
    android:paddingTop="@dimen/nav_item_padding"
    android:paddingBottom="@dimen/nav_item_padding"
    android:paddingStart="@dimen/nav_item_padding"
    android:paddingEnd="@dimen/nav_item_padding" />
