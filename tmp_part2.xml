                            android:src="@drawable/ic_location"
                            android:tint="#007AFF"
                            android:contentDescription="Location" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Date Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#007AFF"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textSize="14sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/summaryDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="December 15, 2024"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar_small"
                            android:tint="#007AFF"
                            android:contentDescription="Calendar" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="#007AFF"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textSize="14sp"
                                android:textColor="#8E8E93"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/summaryTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2:00 PM - 4:00 PM"
                                android:textSize="18sp"
                                android:textColor="#1D1D1F"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            android:tint="#007AFF"
                            android:contentDescription="Time" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Terms and Conditions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/apple_primary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions_note"
            android:textSize="14sp"
            android:textColor="@color/apple_gray_medium"
            android:padding="16dp"
            android:lineSpacingExtra="2dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:padding="24dp"
        android:paddingTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="12dp"
            android:textColor="#007AFF"
            android:backgroundTint="#F2F2F7"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="#33007AFF"
            style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Confirm Reservation"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#007AFF"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="#33FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>
</LinearLayout>
