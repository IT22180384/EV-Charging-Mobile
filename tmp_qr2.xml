                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="2:00 PM - 4:00 PM"
                            android:textColor="@color/apple_gray_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_ev_plug"
                        android:tint="@color/apple_secondary"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/text_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Slot A2 - DC Fast Charger"
                        android:textColor="@color/apple_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Customer Information -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/apple_divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Customer Information"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Customer Name:"
                        android:textColor="@color/apple_gray_medium"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle:"
                        android:textColor="@color/apple_gray_medium"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tesla Model 3"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NIC:"
                        android:textColor="@color/apple_gray_medium"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_nic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="951234567V"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Start Charging Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartCharging"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Start Charging Session"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/apple_success"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_play_arrow"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                style="@style/AppButton" />

            <!-- Cancel Booking Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:text="Cancel Booking"
                android:textColor="@color/apple_error"
                android:textSize="16sp"
                app:backgroundTint="@color/semantic_error_light"
                app:cornerRadius="16dp"
                app:strokeColor="@color/apple_error"
                app:strokeWidth="1dp"
                style="@style/AppButton.Outlined" />

            <!-- Back to Scanner Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToScanner"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                android:text="Scan Another QR Code"
                android:textColor="@color/apple_secondary"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_qr_code"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/apple_secondary"
                app:strokeColor="@color/apple_secondary"
                app:strokeWidth="1dp"
                style="@style/AppButton.Outlined" />

        </LinearLayout>

        <!-- Charging Session Progress (Initially Hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardChargingProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charging in Progress"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ProgressBar
                    android:id="@+id/progressCharging"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/apple_success" />

                <TextView
                    android:id="@+id/tvChargingProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/apple_success"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tvTimeRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated time remaining: 45 minutes"
                    android:textColor="@color/apple_gray_medium"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopCharging"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="16dp"
                    android:text="Stop Charging"
                    android:textColor="@color/apple_error"
                    android:textSize="16sp"
                    app:backgroundTint="@color/semantic_error_light"
                    app:cornerRadius="16dp"
                    app:strokeColor="@color/apple_error"
                    app:strokeWidth="1dp"
                    style="@style/AppButton.Outlined" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
