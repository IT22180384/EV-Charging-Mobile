<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Card Styles -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/apple_card_bg</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="AppCard.Elevated">
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/apple_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/apple_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/apple_text_primary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/apple_text_secondary</item>
    </style>

    <style name="TextAppearance.App.SecondaryText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/apple_text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="backgroundTint">@color/apple_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/card_corner_radius_small</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/apple_secondary</item>
        <item name="strokeColor">@color/apple_secondary</item>
        <item name="cornerRadius">@dimen/card_corner_radius_small</item>
    </style>

    <!-- Settings Item Style -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_xl</item>
        <item name="android:paddingEnd">@dimen/spacing_xl</item>
        <item name="android:paddingTop">@dimen/spacing_lg</item>
        <item name="android:paddingBottom">@dimen/spacing_lg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Profile Item Style -->
    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_xl</item>
        <item name="android:paddingEnd">@dimen/spacing_xl</item>
        <item name="android:paddingTop">@dimen/spacing_md</item>
        <item name="android:paddingBottom">@dimen/spacing_md</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/apple_ash_light</item>
    </style>

    <!-- Switch Style -->
    <style name="AppSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:theme">@style/SwitchTheme</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorAccent">@color/apple_secondary</item>
        <item name="colorControlActivated">@color/apple_secondary</item>
    </style>

</resources>